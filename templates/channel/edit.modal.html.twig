{% extends 'base_modal.html.twig' %}

{% set action = path('channel_edit') %}
{% set button_text = 'Ajouter' %}
{% set title = 'Ajouter un chaîne' %}
{% if channel is not null %}
    {% set action = path('channel_edit', {'channel': channel.id}) %}
    {% set button_text = 'Modifier' %}
    {% set title = 'Modifier une chaîne' %}
{% endif %}

{% block modal_title %}{{ title }}{% endblock %}
{% block body %}
    {{ form_row(form.title) }}
{% endblock %}
{% block footer %}
    {{ parent() }}
{% endblock %}